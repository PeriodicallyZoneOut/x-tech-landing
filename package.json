{
  "name": "x-tech-landing",
  "version": "1.0.0",
  "description": "Landing page with Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./css/output.css --watch",
    "build": "npm run build:css && npm run build:copy",
    "build:css": "tailwindcss -i ./src/input.css -o ./css/output.css --minify",
    "build:copy": "cpx 'index.html assets/**/*' public && cpx './css/output.css' public/css"
  },
  "keywords": [
    "tailwind",
    "landing-page"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "cpx": "^1.2.1"  
  }
}

